# CIRIS Nginx Configuration - Scout Server
# Generated by Ansible migration playbook
# Agent: {{ agent_name }}

worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml application/json application/javascript;

    # Upstream for scout agent
    upstream agent_{{ agent_name }} {
        server localhost:{{ agent_port }};
    }

    server {
        listen 80;
        server_name scoutapi.ciris.ai localhost;

        # Health check endpoint
        location /nginx-health {
            return 200 "healthy\n";
            add_header Content-Type text/plain;
        }

        # Root - API only server
        location = / {
            return 200 "Scout API server - {{ agent_name }}\n";
            add_header Content-Type text/plain;
        }

        # Agent API routes
        location ~ ^/api/{{ agent_name }}/v1/(.*)$ {
            proxy_pass http://agent_{{ agent_name }}/v1/$1$is_args$args;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
        }

        # Direct v1 routes (backwards compatibility)
        location ~ ^/v1/(.*)$ {
            proxy_pass http://agent_{{ agent_name }}/v1/$1$is_args$args;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
        }

        # OAuth callback routes
        location ~ ^/v1/auth/oauth/{{ agent_name }}/([^/]+)/callback$ {
            set $provider $1;
            proxy_pass http://agent_{{ agent_name }}/v1/auth/oauth/$provider/callback$is_args$args;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
