# CIRIS Nginx Configuration - Agents Server
# Generated by Ansible migration playbook

worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml application/json application/javascript application/rss+xml application/atom+xml image/svg+xml;

    # Upstream definitions for agents
    upstream agent_datum {
        server localhost:8001;
    }

    upstream agent_echo-core-jm2jy2 {
        server localhost:8002;
    }

    upstream agent_echo-speculative-4fc6ru {
        server localhost:8003;
    }

    upstream gui {
        server localhost:3000;
    }

    server {
        listen 80;
        server_name agents.ciris.ai localhost;

        # Health check endpoint
        location /nginx-health {
            return 200 "healthy\n";
            add_header Content-Type text/plain;
        }

        # GUI routes
        location / {
            proxy_pass http://gui;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
        }

        # Agent GUI routes
        location ~ ^/agent/([^/]+)(.*)$ {
            set $agent_id $1;
            set $agent_path $2;
            proxy_pass http://gui/agent/$agent_id$agent_path$is_args$args;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Datum API routes
        location ~ ^/api/datum/v1/(.*)$ {
            proxy_pass http://agent_datum/v1/$1$is_args$args;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
        }

        # Echo-core API routes
        location ~ ^/api/echo-core-jm2jy2/v1/(.*)$ {
            proxy_pass http://agent_echo-core-jm2jy2/v1/$1$is_args$args;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
        }

        # Echo-speculative API routes
        location ~ ^/api/echo-speculative-4fc6fu/v1/(.*)$ {
            proxy_pass http://agent_echo-speculative-4fc6ru/v1/$1$is_args$args;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
        }

        # OAuth callback routes for agents
        location ~ ^/v1/auth/oauth/([^/]+)/([^/]+)/callback$ {
            set $agent_id $1;
            set $provider $2;
            proxy_pass http://agent_$agent_id/v1/auth/oauth/$provider/callback$is_args$args;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
