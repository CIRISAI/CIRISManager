[Unit]
Description=CIRIS Manager API Service
After=network.target docker.service
Requires=docker.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/ciris-manager
ExecStart=/opt/ciris-manager/venv/bin/python /opt/ciris-manager/deployment/run-ciris-manager-api.py
Restart=always
RestartSec=5
Environment="PYTHONUNBUFFERED=1"

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ciris-manager-api

[Install]
WantedBy=multi-user.target